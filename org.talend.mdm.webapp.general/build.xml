<?xml version="1.0" encoding="UTF-8"?>
<project name="datastewardship" xmlns:artifact="antlib:org.apache.maven.artifact.ant" default="all">

	<property file="build.properties" />
	
	<property name="web.inf" value="${basedir}/war/WEB-INF" />
	<property name="web.description" value="${web.inf}/web.xml" />
	<property name="web.description.jboss" value="${web.inf}/web.jboss.template" />
	<property name="web.description.temp" value="${web.inf}/web.xml.moved" />

	<target name="prepare-maven" if="local.developer.build">
		<path id="maven-ant-tasks.classpath" path="${maven.ant.tasks.file}" />
		<typedef resource="org/apache/maven/artifact/ant/antlib.xml" uri="antlib:org.apache.maven.artifact.ant" classpathref="maven-ant-tasks.classpath" />
	</target>

	<property name="build.dir" value="${basedir}/target" />
	<property name="jboss.dir" value="E:/opt/jboss_tem" />
	<property name="jboss.instance.dir" value="${jboss.dir}/server/default" />
	<property name="jboss.deploy.dir" value="${jboss.instance.dir}/deploy" />
	<property name="mdm.build.version" value="${major}.${minor}.${rev}-r${svn.revision}" />

	<target name="clean">
		<antcall target="mvn.invoke">
			<param name="mvn.goal" value="clean" />
		</antcall>
	</target>
	
	<target name="prepareJbossEnv">
	     <move file="${web.description}" tofile="${web.description.temp}"/>
	     <move file="${web.description.jboss}" tofile="${web.description}"/>
	</target>

	<target name="package">
		<antcall target="mvn.invoke">
			<param name="mvn.goal" value="package" />
		</antcall>
	</target>
	
	<target name="recoverLocalEnv">
		 <move file="${web.description}" tofile="${web.description.jboss}"/>
		 <move file="${web.description.temp}" tofile="${web.description}"/>
	</target>

	<target name="install">
		<antcall target="mvn.invoke">
			<param name="mvn.goal" value="install" />
		</antcall>
	</target>

	<target name="undeploy" description="undeploy war">
		<delete file="${jboss.deploy.dir}/org.talend.mdm.webapp.general.war" />
	</target>

	<target name="deploy" description="deploy war">
		<copy file="${build.dir}/org.talend.mdm.webapp.general-${mdm.build.version}.war" tofile="${jboss.deploy.dir}/org.talend.mdm.webapp.general.war" />
	</target>

	<target name="all" depends="prepareJbossEnv,package,recoverLocalEnv,undeploy,deploy" />

	<target name="mvn.invoke" description="invokes maven" depends="prepare-maven">
		<property environment="env" />

		<artifact:mvn pom="pom.xml" mavenHome="${env.M2_HOME}" fork="true">
			<arg value="-V" />
			<arg value="-Dgeneral.build.dir=${build.dir}" />
			<arg value="-Dgeneral.build.version=${mdm.build.version}" />
			<arg value="${mvn.goal}" />
		</artifact:mvn>
	</target>

</project>
