<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <!-- Servlets -->
    <servlet>
        <servlet-name>dwr-invoker</servlet-name>
        <display-name>DWR Servlet</display-name>
        <servlet-class>uk.ltd.getahead.dwr.DWRServlet</servlet-class>
        <init-param>
            <param-name>debug</param-name>
            <param-value>true</param-value>
        </init-param>
     </servlet>
    
    <servlet>
        <servlet-name>GeneralService</servlet-name>
        <servlet-class>org.talend.mdm.webapp.general.gwt.ProxyGWTServiceImpl</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>dispatch</servlet-name>
        <servlet-class>org.talend.mdm.webapp.general.server.servlet.ControllerServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>org.talend.mdm.webapp.general.server.servlet.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>dwr-invoker</servlet-name>
        <url-pattern>/login/dwr/*</url-pattern>
    </servlet-mapping> 

    <servlet-mapping>
        <servlet-name>GeneralService</servlet-name>
        <url-pattern>/general/GeneralService</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>dispatch</servlet-name>
        <url-pattern>/secure/</url-pattern>
    </servlet-mapping>   

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>

    <security-role>
        <role-name>administration</role-name>
    </security-role> 
    <security-role>
        <role-name>authenticated</role-name>
    </security-role> 

</web-app>
