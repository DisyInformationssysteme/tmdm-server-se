<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <!-- Servlets -->
    <servlet>
        <servlet-name>GeneralService</servlet-name>
        <servlet-class>org.talend.mdm.webapp.general.server.GeneralServiceImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GeneralService</servlet-name>
        <url-pattern>/general/GeneralService</url-pattern>
    </servlet-mapping>

    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>General.jsp</welcome-file>
    </welcome-file-list>

    <!-- DWR config -->
    @{dev.mode.excluded.start}
    <servlet>
        <servlet-name>dwr-invoker</servlet-name>
        <display-name>DWR Servlet</display-name>
        <servlet-class>uk.ltd.getahead.dwr.DWRServlet</servlet-class>
        <init-param>
            <param-name>debug</param-name>
            <param-value>true</param-value>
        </init-param>
    </servlet>
    @{dev.mode.excluded.end}
    
</web-app>
